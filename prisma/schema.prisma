generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  role      String   @default("COMMUNITY") // Enum Role removed for SQLite
  createdAt DateTime @default(now())
  
  projects       Project[]
  credits        CarbonCredit[]
}

model Project {
  id          String   @id @default(uuid())
  name        String
  location    String
  ecosystem   String
  area        Float
  gps         String
  description String
  imageUrl    String?
  status      String   @default("PENDING") // Enum ProjectStatus removed
  createdAt   DateTime @default(now())
  
  ownerId     String
  owner       User     @relation(fields: [ownerId], references: [id])
  
  aiReport    AIValidationReport?
  credits     CarbonCredit[]
  blockchain  BlockchainRecord[]
}

model AIValidationReport {
  id              String    @id @default(uuid())
  projectId       String    @unique
  project         Project   @relation(fields: [projectId], references: [id])
  
  verificationScore Float
  riskLevel         String    // Enum RiskLevel removed
  summary           String
  createdAt         DateTime  @default(now())
}

model CarbonCredit {
  id        String       @id @default(uuid())
  amount    Float
  status    String       @default("AVAILABLE") // Enum CreditStatus removed
  createdAt DateTime     @default(now())
  
  projectId String
  project   Project @relation(fields: [projectId], references: [id])
  
  ownerId   String
  owner     User    @relation(fields: [ownerId], references: [id])
}

model BlockchainRecord {
  id        String   @id @default(uuid())
  hash      String
  previousHash String?
  timestamp DateTime @default(now())
  
  projectId String
  project   Project @relation(fields: [projectId], references: [id])
  
  // Storing simple metadata for simulation
  action    String
  details   String
}
